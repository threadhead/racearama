= form_for @heat do |f|
  -if @heat.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@heat.errors.count, "error")} prohibited this heat from being saved:"
      %ul
        - @heat.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :heat_group_id
    = f.text_field :heat_group_id
  .field
    = f.label :heat_number
    = f.text_field :heat_number
  .actions
    = f.submit 'Save'
