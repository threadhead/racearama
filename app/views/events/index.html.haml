%h1 Listing events

%table
  %tr
    %th Name
    %th Start time
    %th End time
    %th Location name
    %th Location address1
    %th Location address2
    %th Location city
    %th Location state
    %th Location zipcode
    %th Derby chair
    %th Race manager
    %th Notes
    %th Track
    %th Active
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.name
      %td= event.start_time
      %td= event.end_time
      %td= event.location_name
      %td= event.location_address1
      %td= event.location_address2
      %td= event.location_city
      %td= event.location_state
      %td= event.location_zipcode
      %td= event.derby_chair
      %td= event.race_manager
      %td= event.notes
      %td= event.track
      %td= event.active
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New event', new_event_path
