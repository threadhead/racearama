= form_for @event do |f|
  -if @event.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :location_name
    = f.text_field :location_name
  .field
    = f.label :location_address1
    = f.text_field :location_address1
  .field
    = f.label :location_address2
    = f.text_field :location_address2
  .field
    = f.label :location_city
    = f.text_field :location_city
  .field
    = f.label :location_state
    = f.text_field :location_state
  .field
    = f.label :location_zipcode
    = f.text_field :location_zipcode
  .field
    = f.label :derby_chair
    = f.text_field :derby_chair
  .field
    = f.label :race_manager
    = f.text_field :race_manager
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :track
    = f.text_area :track
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
