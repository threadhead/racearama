= form_for @scout, html: { class: 'form-horizontal' } do |f|
  = render :partial => 'layouts/flash_bootstrap', :locals => {:flash => flash, :ar_object => @coupon}

  .control-group
    = f.label :den, class: 'control-label'
    .controls
      = f.collection_select :den_id, Den.includes(:pack).sort_den.all, :id, :den_leader_pack, {}, {class: 'span5'}

  .control-group
    = f.label :first_name, class: 'control-label'
    .controls
      = f.text_field :first_name

  .control-group
    = f.label :last_name, class: 'control-label'
    .controls
      = f.text_field :last_name

  .control-group
    = f.label :address1, class: 'control-label'
    .controls
      = f.text_field :address1

  .control-group
    = f.label :address2, class: 'control-label'
    .controls
      = f.text_field :address2

  .control-group
    = f.label :city, 'City, State, Zip', class: 'control-label'
    .controls
      = f.text_field :city, class: 'span3', placeholder: 'city'
      = f.text_field :state, class: 'span1', placeholder: 'state'
      = f.text_field :zipcode, class: 'span2', placeholder: 'zip code'

  .control-group
    = f.label :parent_email1, 'Parent emails', class: 'control-label'
    .controls
      = f.text_field :parent_email1, placeholder: 'primary email'
      = f.text_field :parent_email2, placeholder: 'second email'



  - if @scout.checked_in
    %h3.green #{@scout.first_name} is Checked In!
    %br for #{Event.current_event.try(:name)}
  -else

  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', scouts_path, class: 'btn'
