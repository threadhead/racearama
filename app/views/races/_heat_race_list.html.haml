- heat.races.each do |race|
  .race-table{:class => cycle("mid", "mid", "last")}
    %table{:class => race_class(race)}
      %thead
        %tr
          %th{:colspan => 2, :class => "centered"} Race #{race.order_index}
        %tr
          %th.lane Lane
          %th.scout Scout
      %tbody
        - race.lane_assignments.order("lane ASC").each do |lane_asgn|
          %tr
            %td.lane #{lane_asgn.lane}
            %td.scout #{lane_asgn.scout.full_name}